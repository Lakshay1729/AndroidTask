<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="backgroundColor">#EAAD64</item>
        <item name="searchViewStyle">@style/SearchView</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="statusBarBackground">@color/cardview_light_background</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="SearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="suggestionRowLayout">@layout/searchview_layout</item>
    </style>

</resources>